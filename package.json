{
  "name": "riot-app-example",
  "version": "1.0.0",
  "description": "riot demo app",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "build": "rollup -c rollup.config.js",
    "start": "node server/index.js",
    "watch": "nodemon -e js,tag --watch shared/components/src --watch client/assets/js/src -x 'npm run build'",

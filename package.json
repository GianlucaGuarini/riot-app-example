  "bugs": {
    "url": "https://github.com/GianlucaGuarini/riot-app-example/issues"
  },
  "homepage": "https://github.com/GianlucaGuarini/riot-app-example#readme",
  "dependencies": {
    "nprogress": "^0.2.0",
    "riot": "^3.0.5",
    "riot-route": "^3.0.2",
    "sweetalert": "^1.1.3",
    "swiper": "^3.4.1",
    "velocity-animate": "^1.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.0",
